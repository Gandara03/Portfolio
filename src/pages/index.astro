			<style>
				main {
					max-width: 800px;
					margin: 0 auto;
					padding: 2rem;
					box-sizing: border-box;
					overflow-x: hidden;
				}
				.presentacion {
					text-align: center;
					margin-bottom: 2rem;
				}
				h1 {
					color: var(--brand);
					margin-bottom: 1rem;
				}
				h3 {
					font-size: 2rem;
					font-weight: bold;
					margin-bottom: 0.5rem;
					display: flex;
					align-items: center;
					justify-content: center;
					gap: 0.5rem;
				}
				.frase {
					font-size: 1.1rem;
					color: var(--text-2);
					margin-bottom: 0.5rem;
				}
				.resumen, .stack-home, .enlaces, .cv, .contacto {
					text-align: left;
					margin-bottom: 1.5rem;
				}
				.stack-home ul {
					display: block;
					text-align: left;
					margin: 0.5rem 0 0 0;
					padding-left: 1.2rem;
				}
				.enlaces a {
					color: var(--brand);
					font-weight: bold;
					text-decoration: none;
					margin: 0 0.5rem;
				}
				.enlaces a:hover {
					text-decoration: underline;
				}
				.cv button {
					background: #233a57;
					color: white;
					border: none;
					padding: 0.5rem 1rem;
					border-radius: 4px;
					cursor: pointer;
					font-weight: bold;
					font-size: 1rem;
					box-shadow: 0 2px 8px rgba(35, 58, 87, 0.15);
					transition: background 0.2s;
				}
				.cv button a {
					color: white;
					text-decoration: none;
				}
				.cv button:hover {
					background: #1a2a3f;
				}

				/* CTA Section */
				.cta-section {
					background: linear-gradient(135deg, #233a57 0%, #1a2a3f 100%);
					color: white;
					padding: 3rem 2rem;
					margin: 3rem 0;
					border-radius: 16px;
					text-align: center;
					box-sizing: border-box;
				}

				.cta-content h3 {
					font-size: 2.5rem;
					margin-bottom: 1rem;
				}

				.cta-content p {
					font-size: 1.2rem;
					margin-bottom: 2rem;
					opacity: 0.9;
				}

				.cta-buttons {
					display: flex;
					gap: 1rem;
					justify-content: center;
					flex-wrap: wrap;
				}

				.btn {
					padding: 0.8rem 1.5rem;
					border-radius: 8px;
					text-decoration: none;
					font-weight: 600;
					transition: all 0.3s ease;
					display: inline-block;
					border: 2px solid transparent;
				}

				.btn-download {
					background: white;
					color: #233a57;
					font-weight: 600;
				}

				.btn-download:hover {
					background: rgba(255, 255, 255, 0.9);
					transform: translateY(-2px);
				}

				.btn-outline {
					background: transparent;
					color: white;
					border-color: white;
				}

				.btn-outline:hover {
					background: white;
					color: #233a57;
				}

				/* Estilos de Contacto Mejorados */
				.contacto {
					margin-top: 2rem;
				}

				.contacto h3 {
					text-align: center;
					margin-bottom: 2rem;
					font-size: 2rem;
				}

				.contact-grid {
					display: grid;
					grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
					gap: 1.5rem;
				}

				.contact-card {
					background: linear-gradient(135deg, var(--surface-2) 0%, rgba(35, 58, 87, 0.1) 100%);
					padding: 2rem;
					border-radius: 16px;
					box-shadow: 0 8px 32px rgba(0,0,0,0.1);
					transition: all 0.3s ease;
					border: 1px solid rgba(35, 58, 87, 0.2);
					display: flex;
					align-items: center;
					gap: 1.5rem;
					box-sizing: border-box;
				}

				.contact-card:hover {
					transform: translateY(-5px);
					box-shadow: 0 12px 40px rgba(35, 58, 87, 0.2);
					border-color: rgba(35, 58, 87, 0.4);
				}

				.contact-icon {
					flex-shrink: 0;
					width: 60px;
					height: 60px;
					background: linear-gradient(135deg, #233a57 0%, #1a2a3f 100%);
					border-radius: 50%;
					display: flex;
					align-items: center;
					justify-content: center;
					color: white;
				}

				.contact-icon svg {
					width: 28px;
					height: 28px;
				}

				.contact-info h4 {
					color: var(--brand);
					margin: 0 0 0.5rem 0;
					font-size: 1.1rem;
					font-weight: 600;
				}

				.contact-info a,
				.contact-info span {
					color: var(--text-2);
					text-decoration: none;
					font-size: 1rem;
					transition: color 0.3s ease;
				}

				.contact-info a:hover {
					color: #233a57;
				}

				/* Media Queries para Responsive Design */
				@media (max-width: 768px) {
					main {
						padding: 1rem;
						max-width: 100%;
						width: 100%;
						box-sizing: border-box;
					}

					.cta-section {
						padding: 2rem 1rem;
						margin: 2rem 0;
					}

					.cta-content h3 {
						font-size: 2rem;
					}

					.cta-content p {
						font-size: 1.1rem;
					}

					.cta-buttons {
						flex-direction: column;
						align-items: center;
						gap: 1rem;
					}

					.btn {
						width: 100%;
						max-width: 300px;
						text-align: center;
					}

					.contact-grid {
						grid-template-columns: 1fr;
						gap: 1rem;
					}
					
					.contact-card {
						padding: 1.5rem;
						flex-direction: column;
						text-align: center;
						gap: 1rem;
					}

					h3 {
						font-size: 1.5rem;
					}

					.contacto h3 {
						font-size: 1.5rem;
					}
				}

				@media (max-width: 480px) {
					main {
						padding: 0.5rem;
					}

					.cta-section {
						padding: 1.5rem 0.5rem;
						margin: 1.5rem 0;
					}

					.cta-content h3 {
						font-size: 1.5rem;
					}

					.cta-content p {
						font-size: 1rem;
					}

					.contact-card {
						padding: 1rem;
					}

					.contact-icon {
						width: 50px;
						height: 50px;
					}

					.contact-icon svg {
						width: 24px;
						height: 24px;
					}
				}
			</style>
		</main>
		<Footer />
	</body>
</html>
