---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const pageTitle = `Proyectos - ${SITE_TITLE}`;
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead 
			title={pageTitle}
			description="Portafolio de proyectos profesionales de Alexis Gandara. Descubre proyectos de IA, automatización, blockchain, desarrollo web y análisis de datos."
			image="/portafolio-programador.jpg"
			keywords="proyectos, portafolio, IA, automatización, blockchain, desarrollo web, Alexis Gandara"
		/>
		<style>
			main {
				width: 960px;
				max-width: 100%;
				margin: 0 auto;
				padding: 2rem;
				box-sizing: border-box;
				overflow-x: hidden;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
				box-sizing: border-box;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
				max-width: 100%;
				height: auto;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
				max-width: 100%;
				height: auto;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			
			/* Media Queries para Responsive Design */
			@media (max-width: 720px) {
				main {
					width: 100%;
					padding: 1rem;
				}
				
				ul {
					gap: 1rem;
				}
				
				ul li {
					width: 100%;
					text-align: center;
				}
				
				ul li:first-child {
					margin-bottom: 0;
				}
				
				ul li:first-child .title {
					font-size: 1.8rem;
				}
				
				.title {
					font-size: 1.5rem;
				}
			}
			
			@media (max-width: 480px) {
				main {
					padding: 0.5rem;
				}
				
				ul {
					gap: 0.5rem;
				}
				
				ul li:first-child .title {
					font-size: 1.5rem;
				}
				
				.title {
					font-size: 1.3rem;
				}
				
				.date {
					font-size: 0.9rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.slug}/`}>
									<img width={720} height={360} src={post.data.heroImage} alt="" />
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
